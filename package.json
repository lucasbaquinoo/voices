{
  "name": "voices",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "2.0.0-rc.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.7",
    "axios": "^0.21.1",
    "browser-image-compression": "^1.0.14",
    "history": "^5.0.0",
    "react": "^17.0.1",
    "react-content-loader": "^6.0.2",
    "react-device-detect": "^1.15.0",
    "react-dom": "^17.0.1",
    "react-helmet-async": "^1.0.9",
    "react-hook-form": "^6.15.1",
    "react-intl": "^5.11.0",
    "react-router-dom": "6.0.0-beta.0",
    "react-scripts": "4.0.3",
    "react-spinners": "^0.10.4",
    "styled-components": "^5.2.1",
    "styled-media-query": "^2.1.2",
    "swr": "^0.4.1",
    "typescript": "^4.1.5",
    "web-vitals": "^0.2.4",
    "yup": "^0.32.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --passWithNoTests",
    "eject": "react-scripts eject",
    "build-storybook": "build-storybook -s public",
    "commit": "npx git-cz",
    "generate": "plop --plopfile ./generators/plop.js",
    "lint": "eslint src --max-warnings=0",
    "typecheck": "npx tsc --project tsconfig.json",
    "sonar": "yarn test:coverage && npm run sonar:scanner",
    "storybook": "start-storybook -p 6006 -s public --no-dll --no-manager-cache",
    "stylelint": "stylelint 'src/**/*.styles.ts'",
    "test:coverage": "yarn test -- --coverage --testResultsProcessor=jest-sonar-reporter",
    "sonar:scanner": "npx sonar-scanner",
    "test:watch": "react-scripts test --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run sonar"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run stylelint",
      "npm run test --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/",
      "!/generators/",
      "!/public/",
      "!/build/"
    ]
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": "coverage",
    "reportFile": "sonar-report.xml",
    "indent": 2
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.1.21",
    "@storybook/addon-actions": "^6.1.16",
    "@storybook/addon-essentials": "^6.1.16",
    "@storybook/addon-links": "^6.1.16",
    "@storybook/node-logger": "^6.1.16",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.16",
    "@storybook/theming": "^6.1.21",
    "@types/axios": "^0.14.0",
    "@types/browser-image-compression": "^1.0.1",
    "@types/react-easy-crop": "^2.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-lean-changelog": "^0.0.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.8",
    "jest-sonar-reporter": "^2.0.0",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.3",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lean-changelog"
    }
  }
}
